<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/viewpager_tab02_ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/viewpager_tab02_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewpager_tab02_ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
               android:id="@+id/viewpager_tab02_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewpager_tab02_ll3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/viewpager_tab02_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewpager_tab02_frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="#ff0000" >
    </LinearLayout>

</LinearLayout>